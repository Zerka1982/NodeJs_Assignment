doctype html
html
  head
    title Knowledgebase
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
      h5.my-0.mr-md-auto.font-weight-normal Project
      nav.my-2.my-md-0.mr-md-3
        a.p-2.text-dark(href='/') Home
        if user
          a.p-2.text-dark(href='/articles/add') Add Article
        if user
          a.btn.btn-outline-primary(href='/users/logout') Logout
        else
          a.p-2.text-dark(href='/users/login') Login
          a.btn.btn-outline-primary(href='/users/register') Sign up

    .container
      br
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2018
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
    script(src='/js/main.js')
      
